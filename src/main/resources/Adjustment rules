N-Next
FOLLOWING


M-Next+
P-Previous
PRECEDING

R-Previous-
E-Next (Mod)
G-Previous (Mod)

S-No adjustment
NO_ADJUST

'S': //no adjustment
    begin
      DateEvent := tmp;
      DateEnd := tmp - 1;
    end;
    'N':
    begin
      DateEvent := GetBusinessDay(tmp, adjFollowing);
      DateEnd := DateEvent - 1;
    end;
    'P':
    begin
      DateEvent := GetBusinessDay(tmp, adjPreceding);
      DateEnd := DateEvent - 1;
    end;
    'E':
    begin
      DateEvent := GetBusinessDay(tmp, adjModifiedFollowing);
      DateEnd := DateEvent - 1;
    end;
    'G':
    begin
      DateEvent := GetBusinessDay(tmp, adjModifiedPreceding);
      DateEnd := DateEvent - 1;
    end;
    'R': //dlugosc okresu nie zmienia sie
    begin
      DateEnd := tmp - 1;
      DateEvent := GetBusinessday(tmp, adjPreceding);
    end;
    'M': //dlugosc okresu nie zmienia sie
    begin
      DateEnd := tmp - 1;
      DateEvent := GetBusinessday(tmp, adjModifiedFollowing);
    end;